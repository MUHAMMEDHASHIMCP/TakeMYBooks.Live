<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <img class src="/images/logoMini.svg" alt="TakeMyBooks.Org">
                        </div>
                        <div>
                            <h4 class="font-weight-light text-center"> Hello,
                                <%- userName %>.
                            </h4>
                            <p class="text-info text-center">
                                <%- message %>
                            </p>
                            <%- include('../../error/flash-message.ejs') %>
                        </div>
                        <form class="pt-3" action="/user/checkAccount" method="post">
                            <div class="form-group">
                                <label>Enter your Email here</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-key text-primary"></i>
                                        </span>
                                    </div>
                                    <input type="email" name="email" id="email"
                                        class="form-control form-control-lg border-left-0 "
                                        placeholder="Enter your email address ">

                                </div>
                            </div>

                            <div class="mt-3">
                                <button type="submit" value="verifyOtp"
                                    class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn ">Check
                                    Account
                                </button>
                            </div>

                            <div>
                                <div class="my-2 d-flex justify-content-between align-items-center ">
                                    <a class="auth-link text-black " href="/">Back to Home</a>
                                    <a class="auth-link text-black " href="/user/userLogin">Login</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light ">
                                    Don't have an account? <a class="text-primary " href="/user/userSignUp">Create</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>