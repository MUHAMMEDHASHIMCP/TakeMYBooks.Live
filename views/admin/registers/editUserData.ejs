<p class="card-description">
    Address
</p>
<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Address 1</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">State</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Address 2</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Postcode</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
</div>
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Add A Book</h1>
            <form class="form-sample" action="/admin/addBooks" method="post" enctype="multipart/form-data">
                <p class="card-description">
                    Books Details
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Title</label>
                            <div class="col-sm-9">
                                <input type="text" name="bookTitle" class="form-control form-control-lg border-left-0"
                                    placeholder="Book title">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Author</label>
                            <div class="col-sm-9">
                                <input type="text" name="BookAuthor" class="form-control form-control-lg border-left-0"
                                    placeholder="Book author">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">ISBN</label>
                            <div class="col-sm-9">
                                <input type="number" name="ISBN" class="form-control form-control-lg border-left-0"
                                    placeholder="ISBN ">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Description</label>
                            <div class="col-sm-9">
                                <input type="text" name="bookDescription"
                                    class="form-control form-control-lg border-left-0" placeholder="Book Description">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Category1</option>
                                    <option>Category2</option>
                                    <option>Category3</option>
                                    <option>Category4</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Sub Category</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Category1</option>
                                    <option>Category2</option>
                                    <option>Category3</option>
                                    <option>Category4</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Keywords Or Tags</label>
                            <div class="col-sm-9">
                                <input type="text" name="keywords" class="form-control form-control-lg border-left-0"
                                    placeholder="Keywords or Tags">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                                <input type="text" name="bookDescription"
                                    class="form-control form-control-lg border-left-0" placeholder="Book Description">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Pricing Type</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Free</option>
                                    <option>Donation</option>
                                    <option>Delivery Charge</option>
                                    <option>processing charge only</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Processing Charge</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Processing Charge</option>
                                    <% for(let count=0; count <=500; count=count+50 ){ %>
                                        <option>
                                            <%= count %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">
                                <select name="processingCharge" class="form-control form-control-lg "
                                    id="exampleFormControlSelect2 ">
                                    <option>Processing Charge</option>
                                    <% for(let count=0; count <=500; count=count+50 ){ %>
                                        <option>
                                            <%= count %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Sub Category</label>
                            <div class="col-sm-9">
                                <select name="stock" class="form-control form-control-lg "
                                    id="exampleFormControlSelect2 ">
                                    <option>Stock</option>
                                    <% for(let count=1; count <=255; count++ ){ %>
                                        <option>
                                            <%= count %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">City</label>
                            <div class="col-sm-9">
                                <input type="file" name="mainImage" class="form-control form-control-lg border-left-0"
                                    placeholder="Front Cover of book This will be the main Image">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">City</label>
                            <div class="col-sm-9">
                                <input type="file" name="subImage1" class="form-control form-control-lg border-left-0"
                                    placeholder="Book's sub Image 1">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">City</label>
                            <div class="col-sm-9">
                                <input type="file" name="subImage2" class="form-control form-control-lg border-left-0"
                                    placeholder="Book's sub Image 2">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 ">
                    <button id="submit" type="submit" value=""
                        class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn ">
                        Add Book</button>
                </div>
            </form>
            <div class="mt-3 ">
                <a href="/admin/addBooks"><button
                        class="btn btn-block text-danger  btn-outline-warning btn-md font-weight-bold  auth-form-btn ">
                        Add Another Book</button></a>
            </div>
        </div>
    </div>
</div>