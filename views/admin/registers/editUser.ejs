<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-5 mx-auto">
                    <div class="auth-form-light  py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <img class src="/images/logoMini.svg" alt="TakeMyBooks.Org">
                        </div>
                        <div class="text-center">
                            <h4>
                                <%- message %>
                            </h4>
                            <div>
                                <%- include('../../error/flash-message.ejs') %>
                            </div>
                        </div>
                        <form class="pt-3" action="/admin/editUser/<%= data._id %>" method="post" autocomplete="off">

                            <div class="form-group ">
                                <p class="ml-5 text-secondary">Full Name</p>
                                <div class="input-group">

                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account text-primary"></i>
                                        </span>
                                    </div>

                                    <input type="text" name="fullName"
                                        class="form-control form-control-lg border-left-0.5"
                                        placeholder="<%= data.fullName %> ">
                                </div>
                            </div>

                            <div class="form-group">
                                <p class="ml-5 text-secondary">Email</p>
                                <div class="input-group">

                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-email text-primary"></i>
                                        </span>
                                    </div>


                                    <input type="text" name="email" class="form-control form-control-lg border-left-0"
                                        placeholder="<%= data.email %>">
                                </div>
                            </div>
                            <div class="form-group ">
                                <p class="ml-5 text-secondary">Country Code And Phone Number</p>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent ">
                                        <span class="input-group-text bg-transparent border-right-0 ">
                                            <i class="mdi mdi-cellphone-android text-primary "></i>
                                        </span>
                                    </div>
                                    <select name="countryCode" class="custom-select"
                                        style="max-width: 120px; height: 45px;max-height: 45px;"
                                        id="exampleFormControlSelect2 ">

                                        <option selected="">+91</option>
                                        <option>+966</option>
                                        <option>+971</option>
                                        <option>+1</option>

                                    </select>
                                    <input name="phoneNumber" class="form-control"
                                        placeholder=" <%= data.phoneNumber %>" type="text">
                                </div>
                            </div>
                            <div class="form-group ">
                                <p class="ml-5 text-secondary">Job</p>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent ">
                                        <span class="input-group-text bg-transparent border-right-0 ">
                                            <i class="mdi mdi-account-location text-primary "></i>
                                        </span>
                                    </div>
                                    <select name="job" class="form-control form-control-lg "
                                        id="exampleFormControlSelect2 ">
                                        <option>
                                            <%= data.job %>
                                        </option>
                                        <option value="student">Student</option>
                                        <option>Designer</option>
                                        <option>Manager</option>
                                        <option>Accounting</option>
                                        <option>Engineer</option>
                                        <option>Teacher</option>
                                        <option>Artist</option>
                                        <option>Medical</option>
                                        <option>other</option>
                                    </select>
                                </div>
                                <div class="form-group ">

                                    <p class="ml-5 text-secondary">age</p>

                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-alarm text-primary"></i>

                                            </span>
                                        </div>
                                        <input type="number" name="age"
                                            class="form-control form-control-lg border-left-0"
                                            placeholder="<%= data.age %>">
                                    </div>
                                    <!-- 
                                    <div class="form-group ">
                                        <p class="ml-3">Full Name</p>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-home-map-marker text-primary"></i>
                                                </span>
                                            </div>
                                            <input type="text" name="address"
                                                class="form-control form-control-lg border-left-0"
                                                placeholder="<%= data.address %>">
                                        </div>
                                    </div> -->

                                    <div class="form-group ">
                                        <p class="ml-5 text-secondary">Building Number</p>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-home-map-marker text-primary"></i>
                                                </span>
                                            </div>
                                            <input type="text" name="buildingNumber"
                                                class="form-control form-control-lg border-left-0"
                                                placeholder="Building Number">
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <p class="ml-5 text-secondary">Pin code</p>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-map-marker-radius text-primary"></i>
                                                </span>
                                            </div>
                                            <input type="text" name="pinCode"
                                                class="form-control form-control-lg border-left-0"
                                                placeholder="<%= data.pinCode %>">
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <p class="ml-5 text-secondary">District</p>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent ">
                                                <span class="input-group-text bg-transparent border-right-0 ">
                                                    <i class="mdi mdi-account-location text-primary "></i>
                                                </span>
                                            </div>

                                            <select name="district" class="form-control form-control-lg "
                                                id="exampleFormControlSelect2 ">
                                                <option>
                                                    <%= data.district %>
                                                </option>
                                                <option>Malappuram</option>
                                                <option>Calicut</option>
                                                <option>Kannur</option>
                                                <option>Trissur</option>
                                                <option>Kasarcode</option>
                                            </select>
                                        </div>
                                    </div>


                                    <div class="mt-3 ">
                                        <button id="submit" type="submit" value="login"
                                            class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn ">Edit
                                            User Data</button>
                                    </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>