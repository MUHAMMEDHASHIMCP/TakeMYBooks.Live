<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center">Add A Book</h1>
            <form name="addBooks" class="form-sample" action="/admin/addBooks" method="post"
                enctype="multipart/form-data">
                <p class="card-description">
                    Books Details
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Title</label>
                            <div class="col-sm-9">
                                <input type="text" name="bookTitle" class="form-control form-control-lg border-left-0"
                                    placeholder="Book title">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Author</label>
                            <div class="col-sm-9">
                                <input type="text" name="BookAuthor" class="form-control form-control-lg border-left-0"
                                    placeholder="Book author">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">ISBN</label>
                            <div class="col-sm-9">
                                <input type="ISBN" name="ISBN" class="form-control form-control-lg border-left-0"
                                    placeholder="ISBN ">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">TakeMyBooks No.</label>
                            <div class="col-sm-9">
                                <input type="number" name="TakeMyBooksNo"
                                    class="form-control form-control-lg border-left-0" placeholder="TakeMyBooks No.">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Book Description</label>
                            <div class="col-sm-9">
                                <input type="text" name="bookDescription"
                                    class="form-control form-control-lg border-left-0" placeholder="Book Description">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Keywords Or Tags</label>
                            <div class="col-sm-9">
                                <input type="text" name="keywords" class="form-control form-control-lg border-left-0"
                                    placeholder="Keywords or Tags">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category</label>
                            <div class="col-sm-9">

                                <select id="selectCategory4Sub" onchange="selectCategory4SubAddBook()"
                                    class=" form-control ">
                                    <option value="">select category</option>
                                    <% category.forEach(element=>{%>
                                        <option id=" categoryOption" value="<%= element._id%>">
                                            <%= element.category %>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Sub Category</label>
                            <div class="col-sm-9">
                                <select id="selectCategory4Sub" class="form-control ">
                                    <option value="">select category</option>
                                    <% category.forEach(element=>{%>
                                        <option id="categoryOption" value="<%= element._id%>">
                                            <%= element.category %>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Language</label>
                            <div class="col-sm-9">
                                <select id="selectCategory4Sub" class="form-control ">
                                    <option value="">select category</option>
                                    <% Object.keys(languages.language).forEach(key=>{%>
                                        <option id="categoryOption" value="<%= languages.language[key]%>">
                                            <%= languages.language[key] %>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
                <p class="card-description">
                    Vendor Details
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Vendor Type</label>
                            <div class="col-sm-9">
                                <select id="selectCategory4Sub" class="form-control ">
                                    <option value="">select category</option>
                                    <% Object.keys(vendorType.vendorType).forEach(key=>{%>
                                        <option id="categoryOption" value="<%= vendorType.vendorType[key]%>">
                                            <%= vendorType.vendorType[key] %>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Vendor id </label>
                            <div class="col-sm-9">
                                <input type="text" name="VendorId" class="form-control form-control-lg border-left-0"
                                    placeholder="vendor id">
                            </div>
                        </div>
                    </div>
                </div>
                <p class="card-description">
                    Pricing Details
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Pricing type</label>
                            <div class="col-sm-9">
                                <select name="PricingType" class="form-control">
                                    <option>Select Pricing Type</option>
                                    <% Object.keys(pricingType.pricingType).forEach(key=>{%>
                                        <option id="categoryOption" value="<%= pricingType.pricingType[key]%>">
                                            <%= pricingType.pricingType[key] %>
                                        </option>
                                        <% })%>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Price</label>
                            <div class="col-sm-9">
                                <input name="price" type="number" name="Price"
                                    class="form-control form-control-lg border-left-0" placeholder="Price ">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">processing Charge</label>
                            <div class="col-sm-9">
                                <select name="processingCharge" class="form-control form-control-lg "
                                    id="exampleFormControlSelect2 ">
                                    <option>Processing Charge</option>
                                    <% for(let count=0; count <=500; count=count+50 ){ %>
                                        <option>
                                            <%= count %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Stock</label>
                            <div class="col-sm-9">
                                <select name="stock" class="form-control form-control-lg "
                                    id="exampleFormControlSelect2 ">
                                    <option>Stock</option>
                                    <% for(let count=1; count <=255; count++ ){ %>
                                        <option>
                                            <%= count %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="card-description">
                    Images
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Cover Image</label>
                            <div class="col-sm-9">
                                <input type="file" name="mainImage" class="form-control form-control-lg border-left-0"
                                    placeholder="Front Cover of book This will be the main Image">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Back Cover of book</label>
                            <div class="col-sm-9">
                                <input type="file" name="subImage1" class="form-control form-control-lg border-left-0"
                                    placeholder="Book's sub Image 1">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Index Page of book</label>
                            <div class="col-sm-9">
                                <input type="file" name="subImage2" class="form-control form-control-lg border-left-0"
                                    placeholder="Book's sub Image 2">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 mb-3 col-md-6 m-auto ">
                    <button id="submit" type="submit" value=""
                        class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn ">
                        Add Book</button>
                </div>
            </form>
            <div class="pt-3 mt-5 col-md-6 m-auto ">
                <a href="/admin/addBooks"><button
                        class="btn btn-block text-danger  btn-outline-warning btn-md font-weight-bold  auth-form-btn ">
                        Add Another Book</button></a>
            </div>
        </div>
    </div>
</div>